                  <h1>Form Validation</h1>
                  <p> this form used ????toastr, but doesn't work just now.  </p>
                  <div class="form-container-50">
                  <form id="myform" action="mysubmitaction" novalidate>
                      <label for="firstname">First Name *</label>
                      <input type="text" name="firstname" id="firstname" required/>
                      <label for="lastname">Last Name *</label>
                      <input type="text" name="lastname" id="lastname" required/>
                      <p>
                          <label style="width:50%;" for="dob">Date of Birth *</label>
                          <input style="width:50%;" type="text" name="dob" id="dob" required aria-describedby="dateformat"/>
                          <span id="dateformat">mm/dd/yyyy</span>
                      </p>
                      <fieldset>
                          <legend>Address</legend>
                          <label for="street1">Street *</label>
                          <input type="text" name="street1" id="street1" required />
                          <input type="text" title="Additional Street Information" name="street2" id="street2" />
                          <label for="suite">Suite/Appartment</label>
                          <input type="text" name="suite" id="suite" />
                          <label for="city">City *</label>
                          <input type="text" name="city" id="city" required />
                          <label for="state">State *</label>
                          <select name="state" id="state" required>
                              <option value="" selected="selected">Select a State</option>
                              <option value="AL">Alabama</option>
